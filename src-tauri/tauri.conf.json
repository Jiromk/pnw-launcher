{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "PNW Launcher",
  "version": "1.0.0",
  "identifier": "com.pnw.launcher",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Pokémon New World — Launcher",
        "width": 1100,
        "height": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": ["icons/icon.ico"]
  }
}
